<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat_thin"
        android:gravity="left"
        android:text="@string/name_tag"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btnBackAbout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_extralight"
        android:text="@string/about_us"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/btnBackAbout"
        app:layout_constraintTop_toBottomOf="@+id/name_tag" />

    <ImageButton
        android:id="@+id/btnBackAbout"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@color/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back"
        android:contentDescription="@string/name_tag" />


</androidx.constraintlayout.widget.ConstraintLayout>